<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:cardUseCompatPadding="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="@dimen/cart_text_padding">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="管道胶带的程序猿"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/title_size" />

                <TextView
                    android:id="@+id/tv_domain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="=========="
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/subtitle_size" />

                <TextView
                    android:id="@+id/tv_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="======================================================================"
                    android:textSize="@dimen/summary_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingRight="@dimen/card_action_horizontal_padding"
                android:paddingLeft="@dimen/card_action_horizontal_padding"
                android:paddingTop="@dimen/card_action_vertical_padding"
                android:paddingBottom="@dimen/card_action_vertical_padding"
                android:gravity="right">

                <ImageButton
                    android:id="@+id/btn_share"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_share"
                    android:background="?attr/selectableItemBackground" />

                <ImageButton
                    android:id="@+id/btn_comment"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_dialog"
                    android:background="?attr/selectableItemBackground" />

                <ImageButton
                    android:id="@+id/btn_original"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_link"
                    android:background="?attr/selectableItemBackground" />

                <ImageButton
                    android:id="@+id/btn_tags"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_tags"
                    android:background="?attr/selectableItemBackground" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="@dimen/cart_text_padding">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="管道胶带的程序猿"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/title_size" />

                <TextView
                    android:id="@+id/tv_domain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="=========="
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/subtitle_size" />

                <TextView
                    android:id="@+id/tv_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="======================================================================"
                    android:textSize="@dimen/summary_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:padding="@dimen/card_action_padding"
                android:gravity="right">

                <ImageButton
                    android:id="@+id/btn_share"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_share"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/btn_comment"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/icon_more"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/btn_original"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/icon_link"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/btn_easy_read"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/icon_quoteleft"
                    android:background="@android:color/transparent" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>